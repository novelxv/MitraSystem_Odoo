<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Evaluation Form View -->
    <record id="view_mitra_evaluation_form" model="ir.ui.view">
        <field name="name">mitra.evaluation.form</field>
        <field name="model">mitra.evaluation</field>
        <field name="arch" type="xml">
            <form string="Evaluasi Proyek">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nama Evaluasi"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="evaluator_id"/>
                            <field name="evaluation_date"/>
                        </group>
                        <group>
                            <field name="quality_score" widget="priority"/>
                            <field name="overall_assessment"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Metrik Anggaran">
                            <group>
                                <group>
                                    <field name="budget_planned" widget="monetary"/>
                                    <field name="budget_actual" widget="monetary"/>
                                </group>
                                <group>
                                    <field name="budget_variance" widget="monetary"/>
                                    <field name="budget_variance_percent"/>
                                </group>
                            </group>
                        </page>
                        <page string="Metrik Waktu">
                            <group>
                                <group>
                                    <field name="timeline_planned_days"/>
                                    <field name="timeline_actual_days"/>
                                </group>
                                <group>
                                    <field name="timeline_variance_days"/>
                                </group>
                            </group>
                        </page>
                        <page string="Masalah">
                            <field name="issue_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="impact"/>
                                    <field name="resolution"/>
                                    <field name="is_resolved"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Lesson Learned">
                            <field name="lesson_learned" placeholder="Lesson learned dari proyek ini..."/>
                        </page>
                        <page string="Catatan">
                            <field name="notes" placeholder="Catatan tambahan..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Evaluation Tree View -->
    <record id="view_mitra_evaluation_tree" model="ir.ui.view">
        <field name="name">mitra.evaluation.tree</field>
        <field name="model">mitra.evaluation</field>
        <field name="arch" type="xml">
            <tree string="Evaluasi Proyek">
                <field name="name"/>
                <field name="project_id"/>
                <field name="evaluator_id"/>
                <field name="evaluation_date"/>
                <field name="quality_score" widget="priority"/>
                <field name="overall_assessment"/>
            </tree>
        </field>
    </record>

    <!-- Evaluation Search View -->
    <record id="view_mitra_evaluation_search" model="ir.ui.view">
        <field name="name">mitra.evaluation.search</field>
        <field name="model">mitra.evaluation</field>
        <field name="arch" type="xml">
            <search string="Cari Evaluasi">
                <field name="name"/>
                <field name="project_id"/>
                <field name="evaluator_id"/>
                <separator/>
                <filter string="Bulan Ini" name="this_month" domain="[('evaluation_date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')), ('evaluation_date', '&lt;=', (context_today() + relativedelta(months=1, day=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Tahun Ini" name="this_year" domain="[('evaluation_date', '&gt;=', (context_today() + relativedelta(month=1, day=1)).strftime('%Y-%m-%d')), ('evaluation_date', '&lt;=', (context_today() + relativedelta(month=12, day=31)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Proyek" name="group_by_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Evaluator" name="group_by_evaluator" context="{'group_by': 'evaluator_id'}"/>
                    <filter string="Bulan Evaluasi" name="group_by_month" context="{'group_by': 'evaluation_date:month'}"/>
                    <filter string="Penilaian" name="group_by_assessment" context="{'group_by': 'overall_assessment'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Evaluation Action -->
    <record id="action_mitra_evaluation" model="ir.actions.act_window">
        <field name="name">Evaluasi Proyek</field>
        <field name="res_model">mitra.evaluation</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_mitra_evaluation_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat evaluasi proyek pertama Anda!
            </p>
            <p>
                Evaluasi kinerja proyek untuk pembelajaran dan peningkatan.
            </p>
        </field>
    </record>
</odoo>