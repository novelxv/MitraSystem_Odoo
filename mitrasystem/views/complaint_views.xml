<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Complaint Form View -->
    <record id="view_mitra_complaint_form" model="ir.ui.view">
        <field name="name">mitra.complaint.form</field>
        <field name="model">mitra.complaint</field>
        <field name="arch" type="xml">
            <form string="Komplain">
                <header>
                    <button name="action_in_progress" string="Dalam Penanganan" type="object" class="oe_highlight" states="new"/>
                    <button name="action_waiting" string="Menunggu Respon" type="object" states="in_progress"/>
                    <button name="action_resolve" string="Selesaikan" type="object" class="oe_highlight" states="in_progress,waiting"/>
                    <button name="action_close" string="Tutup" type="object" states="resolved"/>
                    <button name="action_reopen" string="Buka Kembali" type="object" states="resolved,closed"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,in_progress,waiting,resolved,closed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="client_id"/>
                            <field name="project_id"/>
                            <field name="date"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group>
                            <field name="pic_id"/>
                            <field name="is_warranty"/>
                            <field name="warranty_end_date" attrs="{'invisible': [('is_warranty', '=', False)]}"/>
                            <field name="satisfaction_rating" widget="priority" attrs="{'invisible': [('state', 'not in', ['resolved', 'closed'])]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Deskripsi">
                            <field name="description" placeholder="Deskripsi komplain..."/>
                        </page>
                        <page string="Resolusi" attrs="{'invisible': [('state', 'in', ['new'])]}">
                            <field name="resolution" placeholder="Resolusi komplain..."/>
                            <group>
                                <field name="resolution_date" attrs="{'invisible': [('resolution_date', '=', False)]}"/>
                            </group>
                        </page>
                        <page string="Lampiran">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Complaint Tree View -->
    <record id="view_mitra_complaint_tree" model="ir.ui.view">
        <field name="name">mitra.complaint.tree</field>
        <field name="model">mitra.complaint</field>
        <field name="arch" type="xml">
            <tree string="Komplain" decoration-danger="priority == '3'" decoration-warning="priority == '2'" decoration-success="state == 'resolved'" decoration-muted="state == 'closed'">
                <field name="name"/>
                <field name="client_id"/>
                <field name="project_id"/>
                <field name="description"/>
                <field name="date"/>
                <field name="pic_id"/>
                <field name="state"/>
                <field name="priority" widget="priority"/>
            </tree>
        </field>
    </record>

    <!-- Complaint Kanban View -->
    <record id="view_mitra_complaint_kanban" model="ir.ui.view">
        <field name="name">mitra.complaint.kanban</field>
        <field name="model">mitra.complaint</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="client_id"/>
                <field name="project_id"/>
                <field name="description"/>
                <field name="date"/>
                <field name="pic_id"/>
                <field name="state"/>
                <field name="priority"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <small class="o_kanban_record_subtitle">
                                            <field name="client_id"/>
                                        </small>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <strong>Proyek:</strong> <field name="project_id"/>
                                    </div>
                                    <div>
                                        <strong>PIC:</strong> <field name="pic_id"/>
                                    </div>
                                    <div>
                                        <strong>Tanggal:</strong> <field name="date"/>
                                    </div>
                                    <div>
                                        <field name="description"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Complaint Search View -->
    <record id="view_mitra_complaint_search" model="ir.ui.view">
        <field name="name">mitra.complaint.search</field>
        <field name="model">mitra.complaint</field>
        <field name="arch" type="xml">
            <search string="Cari Komplain">
                <field name="name"/>
                <field name="client_id"/>
                <field name="project_id"/>
                <field name="pic_id"/>
                <separator/>
                <filter string="Baru" name="new" domain="[('state', '=', 'new')]"/>
                <filter string="Dalam Penanganan" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Menunggu Respon" name="waiting" domain="[('state', '=', 'waiting')]"/>
                <filter string="Terselesaikan" name="resolved" domain="[('state', '=', 'resolved')]"/>
                <filter string="Ditutup" name="closed" domain="[('state', '=', 'closed')]"/>
                <filter string="Prioritas Tinggi" name="high_priority" domain="[('priority', 'in', ['2', '3'])]"/>
                <filter string="Dalam Garansi" name="warranty" domain="[('is_warranty', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Klien" name="group_by_client" context="{'group_by': 'client_id'}"/>
                    <filter string="Proyek" name="group_by_project" context="{'group_by': 'project_id'}"/>
                    <filter string="PIC" name="group_by_pic" context="{'group_by': 'pic_id'}"/>
                    <filter string="Prioritas" name="group_by_priority" context="{'group_by': 'priority'}"/>
                    <filter string="Bulan" name="group_by_month" context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Complaint Action -->
    <record id="action_mitra_complaint" model="ir.actions.act_window">
        <field name="name">Komplain</field>
        <field name="res_model">mitra.complaint</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_mitra_complaint_search"/>
        <field name="context">{'search_default_new': 1, 'search_default_in_progress': 1, 'search_default_waiting': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Belum ada komplain!
            </p>
            <p>
                Kelola komplain dan layanan purna jual dengan mudah.
            </p>
        </field>
    </record>
</odoo>