<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mitra_dashboard_view" model="ir.ui.view">
        <field name="name">mitra.dashboard</field>
        <field name="model">mitra.project</field>
        <field name="arch" type="xml">
            <dashboard>
                <view type="graph" ref="mitrasystem.mitra_project_graph_view"/>
                <group>
                    <group>
                        <aggregate name="total_projects" string="Total Proyek" field="id" group_operator="count"/>
                        <aggregate name="active_projects" string="Proyek Aktif" field="id" group_operator="count" domain="[('state', '=', 'in_progress')]"/>
                        <aggregate name="completed_projects" string="Proyek Selesai" field="id" group_operator="count" domain="[('state', '=', 'completed')]"/>
                        <aggregate name="overdue_projects" string="Proyek Terlambat" field="id" group_operator="count" domain="[('is_overdue', '=', True), ('state', 'in', ['in_progress', 'on_hold'])]"/>
                    </group>
                    <group>
                        <aggregate name="avg_progress" string="Rata-rata Progress" field="progress" group_operator="avg"/>
                        <aggregate name="total_budget_planned" string="Total Anggaran Direncanakan" field="budget_planned" group_operator="sum"/>
                        <aggregate name="total_budget_actual" string="Total Anggaran Aktual" field="budget_actual" group_operator="sum"/>
                        <aggregate name="avg_days_left" string="Rata-rata Hari Tersisa" field="days_left" group_operator="avg"/>
                    </group>
                </group>
                <view type="pivot" ref="mitrasystem.mitra_project_pivot_view"/>
            </dashboard>
        </field>
    </record>

    <record id="mitra_project_graph_view" model="ir.ui.view">
        <field name="name">mitra.project.graph</field>
        <field name="model">mitra.project</field>
        <field name="arch" type="xml">
            <graph string="Proyek" type="bar">
                <field name="state"/>
                <field name="progress" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="mitra_project_pivot_view" model="ir.ui.view">
        <field name="name">mitra.project.pivot</field>
        <field name="model">mitra.project</field>
        <field name="arch" type="xml">
            <pivot string="Proyek" display_quantity="true">
                <field name="state" type="row"/>
                <field name="progress" type="measure"/>
                <field name="budget_planned" type="measure"/>
                <field name="budget_actual" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="action_mitra_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">mitra.project</field>
        <field name="view_mode">dashboard,graph,pivot</field>
        <field name="view_id" ref="mitra_dashboard_view"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Belum ada proyek untuk ditampilkan di dashboard!
            </p>
            <p>
                Buat proyek baru untuk melihat statistik di dashboard.
            </p>
        </field>
    </record>
</odoo>