<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_mitra_project_task" model="ir.actions.act_window">
        <field name="name">Tugas</field>
        <field name="res_model">mitra.project.task</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_project_id': active_id}</field>
        <field name="domain">[('project_id', '=', active_id)]</field>
    </record>

    <record id="action_mitra_project_document" model="ir.actions.act_window">
        <field name="name">Dokumen</field>
        <field name="res_model">mitra.project.document</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_project_id': active_id}</field>
        <field name="domain">[('project_id', '=', active_id)]</field>
    </record>

    <!-- Project Form View -->
    <record id="view_mitra_project_form" model="ir.ui.view">
        <field name="name">mitra.project.form</field>
        <field name="model">mitra.project</field>
        <field name="arch" type="xml">
            <form string="Proyek">
                <header>
                    <button name="action_start_project" string="Mulai Proyek" type="object" class="oe_highlight" states="draft"/>
                    <button name="action_hold_project" string="Tunda Proyek" type="object" states="in_progress"/>
                    <button name="action_complete_project" string="Selesaikan Proyek" type="object" class="oe_highlight" states="in_progress,on_hold"/>
                    <button name="action_cancel_project" string="Batalkan Proyek" type="object" states="draft,in_progress,on_hold"/>
                    <button name="action_reset_to_draft" string="Kembalikan ke Draft" type="object" states="cancelled"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,on_hold,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(mitrasystem.action_mitra_project_task)d" type="action" class="oe_stat_button" icon="fa-tasks">
                            <field name="task_count" widget="statinfo" string="Tugas"/>
                        </button>
                        <button name="%(mitrasystem.action_mitra_project_document)d" type="action" class="oe_stat_button" icon="fa-file">
                            <field name="document_count" widget="statinfo" string="Dokumen"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nama Proyek"/>
                        </h1>
                        <h3>
                            <field name="code" readonly="1"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="client_id"/>
                            <field name="pic_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="days_left"/>
                        </group>
                        <group>
                            <field name="progress" widget="progressbar"/>
                            <field name="budget_planned" widget="monetary"/>
                            <field name="budget_actual" widget="monetary"/>
                            <field name="is_overdue" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Deskripsi">
                            <field name="description" placeholder="Deskripsi proyek..."/>
                        </page>
                        <page string="Tugas">
                            <field name="task_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="assignee_id"/>
                                    <field name="deadline"/>
                                    <field name="state"/>
                                    <field name="priority"/>
                                    <field name="progress" widget="progressbar"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Update Progress">
                            <field name="progress_update_ids">
                                <tree>
                                    <field name="date"/>
                                    <field name="employee_id"/>
                                    <field name="description"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Tim Proyek">
                            <field name="team_member_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Dokumen">
                            <field name="document_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="file_name"/>
                                    <field name="file_type"/>
                                    <field name="file_size"/>
                                    <field name="uploaded_by"/>
                                    <field name="upload_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Project Tree View -->
    <record id="view_mitra_project_tree" model="ir.ui.view">
        <field name="name">mitra.project.tree</field>
        <field name="model">mitra.project</field>
        <field name="arch" type="xml">
            <tree string="Proyek" decoration-danger="is_overdue and state in ('in_progress','on_hold')" decoration-success="state == 'completed'" decoration-muted="state == 'cancelled'">
                <field name="code"/>
                <field name="name"/>
                <field name="client_id"/>
                <field name="pic_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="days_left"/>
                <field name="state"/>
                <field name="progress" widget="progressbar"/>
                <field name="is_overdue" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Project Kanban View -->
    <record id="view_mitra_project_kanban" model="ir.ui.view">
        <field name="name">mitra.project.kanban</field>
        <field name="model">mitra.project</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="client_id"/>
                <field name="pic_id"/>
                <field name="end_date"/>
                <field name="days_left"/>
                <field name="state"/>
                <field name="progress"/>
                <field name="is_overdue"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <small class="o_kanban_record_subtitle">
                                            <field name="code"/>
                                        </small>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <strong>Klien:</strong> <field name="client_id"/>
                                    </div>
                                    <div>
                                        <strong>PIC:</strong> <field name="pic_id"/>
                                    </div>
                                    <div>
                                        <strong>Deadline:</strong> <field name="end_date"/>
                                    </div>
                                    <div t-if="record.days_left.raw_value &lt; 0" class="text-danger">
                                        <strong>Terlambat:</strong> <field name="days_left"/> hari
                                    </div>
                                    <div t-else="">
                                        <strong>Sisa:</strong> <field name="days_left"/> hari
                                    </div>
                                    <div class="o_kanban_progress">
                                        <div class="o_kanban_progress_title">
                                            Progress: <field name="progress"/>%
                                        </div>
                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" t-att-style="'width: ' + record.progress.raw_value + '%'" t-att-aria-valuenow="record.progress.raw_value" aria-valuemin="0" aria-valuemax="100"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Project Calendar View -->
    <record id="view_mitra_project_calendar" model="ir.ui.view">
        <field name="name">mitra.project.calendar</field>
        <field name="model">mitra.project</field>
        <field name="arch" type="xml">
            <calendar string="Proyek" date_start="start_date" date_stop="end_date" color="state" mode="month">
                <field name="name"/>
                <field name="client_id"/>
                <field name="pic_id"/>
            </calendar>
        </field>
    </record>

    <!-- Project Search View -->
    <record id="view_mitra_project_search" model="ir.ui.view">
        <field name="name">mitra.project.search</field>
        <field name="model">mitra.project</field>
        <field name="arch" type="xml">
            <search string="Cari Proyek">
                <field name="name"/>
                <field name="code"/>
                <field name="client_id"/>
                <field name="pic_id"/>
                <separator/>
                <filter string="Proyek Saya" name="my_projects" domain="[('pic_id.user_id', '=', uid)]"/>
                <filter string="Aktif" name="active" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Tertunda" name="on_hold" domain="[('state', '=', 'on_hold')]"/>
                <filter string="Selesai" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Terlambat" name="overdue" domain="[('is_overdue', '=', True), ('state', 'in', ['in_progress', 'on_hold'])]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Klien" name="group_by_client" context="{'group_by': 'client_id'}"/>
                    <filter string="PIC" name="group_by_pic" context="{'group_by': 'pic_id'}"/>
                    <filter string="Bulan Mulai" name="group_by_start_month" context="{'group_by': 'start_date:month'}"/>
                    <filter string="Bulan Deadline" name="group_by_end_month" context="{'group_by': 'end_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Project Action -->
    <record id="action_mitra_project" model="ir.actions.act_window">
        <field name="name">Proyek</field>
        <field name="res_model">mitra.project</field>
        <field name="view_mode">kanban,tree,form,calendar</field>
        <field name="search_view_id" ref="view_mitra_project_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat proyek pertama Anda!
            </p>
            <p>
                Kelola proyek, tugas, dan tim Anda dengan mudah.
            </p>
        </field>
    </record>

    <!-- Task Views -->
    <record id="view_mitra_project_task_form" model="ir.ui.view">
        <field name="name">mitra.project.task.form</field>
        <field name="model">mitra.project.task</field>
        <field name="arch" type="xml">
            <form string="Tugas">
                <header>
                    <button name="action_start_task" string="Mulai Tugas" type="object" class="oe_highlight" states="not_started"/>
                    <button name="action_complete_task" string="Selesaikan Tugas" type="object" class="oe_highlight" states="in_progress"/>
                    <button name="action_block_task" string="Tandai Terhambat" type="object" states="in_progress"/>
                    <button name="action_reset_task" string="Reset" type="object" states="completed,blocked"/>
                    <field name="state" widget="statusbar" statusbar_visible="not_started,in_progress,completed,blocked"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nama Tugas"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="assignee_id"/>
                            <field name="deadline"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group>
                            <field name="progress" widget="progressbar"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Deskripsi">
                            <field name="description" placeholder="Deskripsi tugas..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_mitra_project_task_tree" model="ir.ui.view">
        <field name="name">mitra.project.task.tree</field>
        <field name="model">mitra.project.task</field>
        <field name="arch" type="xml">
            <tree string="Tugas" decoration-success="state == 'completed'" decoration-danger="state == 'blocked'" decoration-info="state == 'in_progress'" decoration-muted="state == 'not_started'">
                <field name="name"/>
                <field name="project_id"/>
                <field name="assignee_id"/>
                <field name="deadline"/>
                <field name="state"/>
                <field name="priority" widget="priority"/>
                <field name="progress" widget="progressbar"/>
            </tree>
        </field>
    </record>

    <!-- Progress Update Views -->
    <record id="view_mitra_project_progress_form" model="ir.ui.view">
        <field name="name">mitra.project.progress.form</field>
        <field name="model">mitra.project.progress</field>
        <field name="arch" type="xml">
            <form string="Update Progress">
                <sheet>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="user_id"/>
                            <field name="employee_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="state"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Deskripsi">
                            <field name="description" placeholder="Deskripsi aktivitas..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_mitra_project_progress_tree" model="ir.ui.view">
        <field name="name">mitra.project.progress.tree</field>
        <field name="model">mitra.project.progress</field>
        <field name="arch" type="xml">
            <tree string="Update Progress">
                <field name="date"/>
                <field name="project_id"/>
                <field name="employee_id"/>
                <field name="description"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_mitra_project_progress" model="ir.actions.act_window">
        <field name="name">Update Progress</field>
        <field name="res_model">mitra.project.progress</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Document Views -->
    <record id="view_mitra_project_document_form" model="ir.ui.view">
        <field name="name">mitra.project.document.form</field>
        <field name="model">mitra.project.document</field>
        <field name="arch" type="xml">
            <form string="Dokumen">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="project_id"/>
                            <field name="file" filename="file_name"/>
                            <field name="file_name" invisible="1"/>
                        </group>
                        <group>
                            <field name="file_type"/>
                            <field name="file_size"/>
                            <field name="uploaded_by"/>
                            <field name="upload_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mitra_project_document_tree" model="ir.ui.view">
        <field name="name">mitra.project.document.tree</field>
        <field name="model">mitra.project.document</field>
        <field name="arch" type="xml">
            <tree string="Dokumen">
                <field name="name"/>
                <field name="project_id"/>
                <field name="file_name"/>
                <field name="file_type"/>
                <field name="file_size"/>
                <field name="uploaded_by"/>
                <field name="upload_date"/>
            </tree>
        </field>
    </record>
</odoo>