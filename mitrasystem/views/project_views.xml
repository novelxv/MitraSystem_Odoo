<odoo>    
    <record id="view_project_form" model="ir.ui.view">
        <field name="name">mitrasystem.project.form</field>
        <field name="model">mitrasystem.project</field>
        <field name="groups_id" eval="[(4, ref('mitrasystem.group_admin_sistem'))]"/>
        <field name="arch" type="xml">
            <form string="Proyek">
                <group>
                    <field name="name"/>
                    <field name="client"/>
                    <field name="pic_id"/>
                    <field name="deadline"/>
                    <field name="status"/>
                    <field name="progress"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_project_list" model="ir.ui.view">
        <field name="name">mitrasystem.project.list</field>
        <field name="model">mitrasystem.project</field>
        <field name="arch" type="xml">
            <list string="Daftar Proyek">
                <field name="name"/>
                <field name="client"/>
                <field name="pic_id"/>
                <field name="deadline"/>
                <field name="status"/>
                <field name="progress"/>
            </list>
        </field>
    </record>

    <record id="action_mitrasystem_project" model="ir.actions.act_window">
        <field name="name">Proyek</field>
        <field name="res_model">mitrasystem.project</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_mitrasystem_root" name="MitraSystem"/>
    <menuitem id="menu_mitrasystem_project" name="Proyek" parent="menu_mitrasystem_root"/>
    <menuitem id="menu_mitrasystem_project_action" name="Kelola Proyek" parent="menu_mitrasystem_project"
              action="action_mitrasystem_project"/>
</odoo>