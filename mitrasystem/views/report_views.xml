<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Form View -->
    <record id="view_mitra_report_form" model="ir.ui.view">
        <field name="name">mitra.report.form</field>
        <field name="model">mitra.report</field>
        <field name="arch" type="xml">
            <form string="Laporan">
                <header>
                    <button name="action_generate_report" string="Generate Laporan" type="object" class="oe_highlight" states="draft"/>
                    <button name="action_send_report" string="Kirim Laporan" type="object" class="oe_highlight" states="generated"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated,sent"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nama Laporan"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="report_type"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="project_id" attrs="{'invisible': [('report_type', '!=', 'project')], 'required': [('report_type', '=', 'project')]}"/>
                            <field name="creator_id"/>
                            <field name="format"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Catatan">
                            <field name="notes" placeholder="Catatan tambahan..."/>
                        </page>
                        <page string="File Laporan" attrs="{'invisible': [('state', '=', 'draft')]}">
                            <group>
                                <field name="report_file" filename="report_filename"/>
                                <field name="report_filename" invisible="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Report Tree View -->
    <record id="view_mitra_report_tree" model="ir.ui.view">
        <field name="name">mitra.report.tree</field>
        <field name="model">mitra.report</field>
        <field name="arch" type="xml">
            <tree string="Laporan" decoration-info="state == 'draft'" decoration-success="state == 'generated'" decoration-muted="state == 'sent'">
                <field name="name"/>
                <field name="report_type"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="project_id"/>
                <field name="creator_id"/>
                <field name="format"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Report Search View -->
    <record id="view_mitra_report_search" model="ir.ui.view">
        <field name="name">mitra.report.search</field>
        <field name="model">mitra.report</field>
        <field name="arch" type="xml">
            <search string="Cari Laporan">
                <field name="name"/>
                <field name="report_type"/>
                <field name="project_id"/>
                <field name="creator_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Dihasilkan" name="generated" domain="[('state', '=', 'generated')]"/>
                <filter string="Terkirim" name="sent" domain="[('state', '=', 'sent')]"/>
                <group expand="0" string="Group By">
                    <filter string="Jenis Laporan" name="group_by_type" context="{'group_by': 'report_type'}"/>
                    <filter string="Proyek" name="group_by_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Pembuat" name="group_by_creator" context="{'group_by': 'creator_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Format" name="group_by_format" context="{'group_by': 'format'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Report Action -->
    <record id="action_mitra_report" model="ir.actions.act_window">
        <field name="name">Laporan</field>
        <field name="res_model">mitra.report</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_mitra_report_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat laporan pertama Anda!
            </p>
            <p>
                Generate dan kirim laporan proyek dengan mudah.
            </p>
        </field>
    </record>
</odoo>