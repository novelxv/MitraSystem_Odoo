<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Handover Form View -->
    <record id="view_mitra_handover_form" model="ir.ui.view">
        <field name="name">mitra.handover.form</field>
        <field name="model">mitra.handover</field>
        <field name="arch" type="xml">
            <form string="Handover Tugas">
                <header>
                    <button name="action_start_handover" string="Mulai Handover" type="object" class="oe_highlight" states="draft"/>
                    <button name="action_complete_handover" string="Selesaikan Handover" type="object" class="oe_highlight" states="in_progress"/>
                    <button name="action_cancel_handover" string="Batalkan Handover" type="object" states="draft,in_progress"/>
                    <button name="action_reset_to_draft" string="Kembalikan ke Draft" type="object" states="cancelled"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="task_id" domain="[('project_id', '=', project_id)]"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="from_employee_id"/>
                            <field name="to_employee_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Deskripsi">
                            <field name="description" placeholder="Deskripsi handover..."/>
                        </page>
                        <page string="Catatan">
                            <field name="notes" placeholder="Catatan tambahan..."/>
                        </page>
                        <page string="Lampiran">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Handover Tree View -->
    <record id="view_mitra_handover_tree" model="ir.ui.view">
        <field name="name">mitra.handover.tree</field>
        <field name="model">mitra.handover</field>
        <field name="arch" type="xml">
            <tree string="Handover Tugas" decoration-success="state == 'completed'" decoration-info="state == 'in_progress'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="from_employee_id"/>
                <field name="to_employee_id"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Handover Search View -->
    <record id="view_mitra_handover_search" model="ir.ui.view">
        <field name="name">mitra.handover.search</field>
        <field name="model">mitra.handover</field>
        <field name="arch" type="xml">
            <search string="Cari Handover">
                <field name="name"/>
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="from_employee_id"/>
                <field name="to_employee_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Dalam Proses" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Selesai" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Dibatalkan" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Proyek" name="group_by_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Dari" name="group_by_from" context="{'group_by': 'from_employee_id'}"/>
                    <filter string="Ke" name="group_by_to" context="{'group_by': 'to_employee_id'}"/>
                    <filter string="Tanggal" name="group_by_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Handover Action -->
    <record id="action_mitra_handover" model="ir.actions.act_window">
        <field name="name">Handover Tugas</field>
        <field name="res_model">mitra.handover</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_mitra_handover_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat handover tugas pertama Anda!
            </p>
            <p>
                Kelola perpindahan tugas antar staf dengan mudah.
            </p>
        </field>
    </record>
</odoo>