<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Staff Form View -->
    <record id="view_mitra_staff_form" model="ir.ui.view">
        <field name="name">mitra.staff.form</field>
        <field name="model">mitra.staff</field>
        <field name="arch" type="xml">
            <form string="Staf">
                <header>
                    <button name="toggle_active" string="Aktifkan" type="object" class="oe_highlight" attrs="{'invisible': [('is_active', '=', True)]}"/>
                    <button name="toggle_active" string="Nonaktifkan" type="object" attrs="{'invisible': [('is_active', '=', False)]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(mitrasystem.action_mitra_project)d" type="action" class="oe_stat_button" icon="fa-tasks" context="{'search_default_pic_id': employee_id}">
                            <field name="project_count" widget="statinfo" string="Proyek"/>
                        </button>
                    </div>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nama Lengkap"/>
                        </h1>
                        <h3>
                            <field name="job_title" placeholder="Jabatan"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" invisible="1"/>
                            <field name="role"/>
                            <field name="department"/>
                            <field name="work_email"/>
                            <field name="mobile_phone"/>
                        </group>
                        <group>
                            <field name="department_id"/>
                            <field name="parent_id"/>
                            <field name="user_id"/>
                            <field name="is_active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Informasi Pribadi">
                            <group>
                                <group>
                                    <field name="address_home_id"/>
                                    <field name="private_email"/>
                                    <field name="gender"/>
                                    <field name="birthday"/>
                                </group>
                                <group>
                                    <field name="identification_id"/>
                                    <field name="passport_id"/>
                                    <field name="bank_account_id"/>
                                </group>
                            </group>
                        </page>
                        <page string="Informasi Kerja">
                            <group>
                                <group>
                                    <field name="work_location_id"/>
                                    <field name="work_phone"/>
                                    <field name="employee_type"/>
                                </group>
                                <group>
                                    <field name="certificate"/>
                                    <field name="study_field"/>
                                    <field name="study_school"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Staff Tree View -->
    <record id="view_mitra_staff_tree" model="ir.ui.view">
        <field name="name">mitra.staff.tree</field>
        <field name="model">mitra.staff</field>
        <field name="arch" type="xml">
            <tree string="Staf" decoration-muted="is_active == False">
                <field name="name"/>
                <field name="job_title"/>
                <field name="department"/>
                <field name="role"/>
                <field name="work_email"/>
                <field name="mobile_phone"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <!-- Staff Kanban View -->
    <record id="view_mitra_staff_kanban" model="ir.ui.view">
        <field name="name">mitra.staff.kanban</field>
        <field name="model">mitra.staff</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <field name="job_title"/>
                <field name="department"/>
                <field name="role"/>
                <field name="work_email"/>
                <field name="mobile_phone"/>
                <field name="is_active"/>
                <field name="image_128"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('mitra.staff', 'image_128', record.id.raw_value)" alt="Staff Image"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="job_title"/>
                                </div>
                                <div>
                                    <field name="department"/>
                                </div>
                                <div>
                                    <field name="role" widget="badge"/>
                                </div>
                                <div class="o_kanban_tags_section">
                                    <span t-if="record.is_active.raw_value" class="badge badge-success">Aktif</span>
                                    <span t-else="" class="badge badge-secondary">Nonaktif</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Staff Search View -->
    <record id="view_mitra_staff_search" model="ir.ui.view">
        <field name="name">mitra.staff.search</field>
        <field name="model">mitra.staff</field>
        <field name="arch" type="xml">
            <search string="Cari Staf">
                <field name="name"/>
                <field name="job_title"/>
                <field name="department"/>
                <field name="role"/>
                <field name="work_email"/>
                <separator/>
                <filter string="Aktif" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Nonaktif" name="inactive" domain="[('is_active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Departemen" name="group_by_department" context="{'group_by': 'department'}"/>
                    <filter string="Peran" name="group_by_role" context="{'group_by': 'role'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Staff Action -->
    <record id="action_mitra_staff" model="ir.actions.act_window">
        <field name="name">Staf</field>
        <field name="res_model">mitra.staff</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_mitra_staff_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tambahkan staf pertama Anda!
            </p>
            <p>
                Kelola staf dan peran mereka dalam sistem.
            </p>
        </field>
    </record>
</odoo>